<h1>Listing posts</h1>
<h2> Search </h2>

<%= form_tag search_posts_path, method: :get do %>
<p>

<%= text_field_tag :title ,nil,  size: 30, placeholder: "title" %>

</p>

<p>
<%= submit_tag "Search_dat" %>

  </p>
<%end%>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>String</th>
      <th>Body</th>
      <th>Published at</th>
      <th>Time</th>
      <th>Draft status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |post| %>
      <tr>
        <td><%= post.subject %></td>
        <td><%= post.string %></td>
        <td><%= post.body %></td>
        <td><%= post.published_at %></td>
        <td><%= post.time %></td>
        <td><%= post.draft_status %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
